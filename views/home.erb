<div class="container-fluid" style="margin-bottom:0; background-color: hsla(0, 15%, 95%, .66)">  
    <div class="view" style="background-image: url('https://raw.githubusercontent.com/JRoyWirth/KCP/master/views/Map_purp.PNG'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
        <div class="jumbotron text-center" style="margin-bottom:0; background-color: hsla(0, 15%, 95%, 0)">
            <h1 class="white">Kellogg Cuisine Project</h1> 
        </div>
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-8">
                <h5 class="white" style="text-align: center">
                    Please enjoy fantastic recipes from your classmate's kitchens around the world. We hope you will add to our library of stories and recipes!
                </h5>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="row">
            <br><br><br>
        </div>
    </div>
</div>    

<div class="container-fluid">
    <div class="container" style="overflow-x:auto;">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Recipe</th>
                <th>Meal Type</th>
                <th>Contributor</th>
                <th>Program</th>
                <th>Year</th>
                <th>Section</th>
                <th>Kwest</th>
                <th>Region</th>
                <th>Dietary</th>
            </tr>
            </thead>
            <tbody>
                <% for recipe in @recipes %>
                    <tr>
                        <td>
                            <a href="/recipe/<%= recipe[:id]%>"><%= recipe[:title] %> <a>
                        </td>

                        <td>
                            <%= recipe[:meal]%>
                        </td>

                        <td>
                            <% user_of_recipe = @user_table.where(id: recipe[:user_id]).to_a[0] %>
                            <%= user_of_recipe[:namefirst] %> <%= user_of_recipe[:namelast] %>
                        </td>
                        
                        <td>
                            <%= recipe[:program]%>
                        </td>
                        
                        <td>
                            <%= recipe[:year] %>
                        </td>
                        
                        <td>
                            <%= recipe[:section]%>
                        </td>
                        
                        <td>
                            <%= recipe[:kwest] %>
                        </td>
                        
                        <td>
                            <%= recipe[:location] %>
                        </td>

                        <td>
                            <% if recipe[:meatless] %>
                                <% if recipe[:dairyfree] %>
                                    <% if recipe[:glutenfree] %>
                                        meat, dairy & gluten free
                                    <% else %>
                                        meat & dairy free
                                    <% end %>
                                <% else %>
                                    <% if recipe[:glutenfree] %>
                                        meat & gluten free
                                    <% else %>
                                        meat free
                                    <% end %>
                                <% end %>
                            <% else %>
                                <% if recipe[:dairyfree] %>
                                    <% if recipe[:glutenfree] %>
                                        dairy & gluten free
                                    <% else %>
                                        dairy free
                                    <% end %>
                                <% else %>
                                    <% if recipe[:glutenfree] %>
                                        gluten free
                                    <% else %>
                                    <% end %>
                                <% end %>
                            <% end %>     
                        </td>
                    </tr>
                <% end %>    
            </tbody>
        </table>
    </div>
</div>

